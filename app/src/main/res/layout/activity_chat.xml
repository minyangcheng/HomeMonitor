<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/fullscreen_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/pip_video_view"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/iv_switch_camear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@mipmap/switch_camera_ic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_switch_mute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/unmute_ic"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_hangup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/end_call" />

        <ImageView
            android:id="@+id/iv_switch_speak"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/speaker_ic"
            android:visibility="invisible" />

    </LinearLayout>

</FrameLayout>
